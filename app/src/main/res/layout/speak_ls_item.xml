<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@mipmap/groweup"
        >

        <RelativeLayout
            android:paddingBottom="@dimen/space_10"
            android:paddingTop="@dimen/space_12"
            android:paddingRight="@dimen/space_20"
            android:paddingLeft="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_school_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高校洽谈会"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_normal_gray"
                />

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_gray"
                android:layout_below="@+id/tv_school_speak"
                android:layout_marginTop="@dimen/space_5"
                android:textSize="@dimen/text_size_12"
                android:text="苏州大学"
                />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="未开始"
                android:textSize="@dimen/text_size_11"
                android:textColor="@color/text_red"
                />

        </RelativeLayout>

        <View
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:paddingTop="@dimen/space_10">

            <TextView
                android:id="@+id/tv_school_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高校洽谈会"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_school_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_school_address"
                android:layout_marginTop="@dimen/space_8"
                android:text="苏州大学"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_data"
                android:paddingBottom="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="2小时前"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_10" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_5"/>

</LinearLayout>
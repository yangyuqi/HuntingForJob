<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dibeijing"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo01"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/rl"
        android:layout_marginTop="70dp"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_height="35dp">

        <TextView
            android:textColor="@color/text_red"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人用户"
            android:textSize="@dimen/text_size_16"
            />

        <View
            android:background="@color/text_gray"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/text_main_gray"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业用户"
            android:textSize="@dimen/text_size_16"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="@dimen/space_20"
        android:id="@+id/rl2"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_bg_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl"
        android:layout_alignLeft="@+id/rl3"
        android:layout_alignStart="@+id/rl3">

        <EditText
            android:maxLength="11"
            android:inputType="number"
            android:layout_marginLeft="@dimen/space_10"
            android:drawablePadding="@dimen/space_20"
            android:drawableLeft="@mipmap/shoujizhanghao"
            android:singleLine="true"
            android:id="@+id/tv_phone"
            android:cursorVisible="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_size_13"
            android:background="@null"
            android:hint="手机号"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_below="@+id/rl2"
        android:layout_marginTop="@dimen/space_10"
        android:background="@drawable/login_bg_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText

            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/space_10"
            android:drawablePadding="@dimen/space_20"
            android:drawableLeft="@mipmap/mima"
            android:singleLine="true"
            android:id="@+id/tv_pwd"
            android:cursorVisible="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_size_13"
            android:background="@null"
            android:hint="请输入密码"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_white"
        android:text="登      录"
        android:scaleType="fitXY"
        android:background="@mipmap/anniu"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/rl3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_find_pwd"
            android:paddingBottom="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/text_main_gray"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_register"
            android:paddingBottom="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/text_main_gray"
            />

    </RelativeLayout>

</RelativeLayout>
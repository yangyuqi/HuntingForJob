<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目经验"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_black"
                android:drawableLeft="@mipmap/xiangmujingli"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/space_5"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:src="@mipmap/xian"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="时间"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_info_bg">

                        <TextView
                            android:id="@+id/tv_work_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/space_10"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/space_15"
                            android:src="@mipmap/rili" />

                    </RelativeLayout>

                    <View
                        android:layout_marginRight="@dimen/space_5"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_gravity="center_vertical"
                        android:layout_width="15dp"
                        android:layout_height="1dp"
                        android:background="@color/text_gray"/>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_info_bg">

                        <TextView
                            android:id="@+id/tv_brith"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/space_10"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/space_15"
                            android:src="@mipmap/rili" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目"
                    />

                <RelativeLayout
                    android:background="@drawable/user_info_bg"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:paddingLeft="@dimen/space_10"
                        android:textSize="@dimen/text_size_13"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint=""
                        />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目描述"
                    />

                <RelativeLayout
                    android:background="@drawable/user_info_bg"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <EditText
                        android:paddingLeft="@dimen/space_10"
                        android:textSize="@dimen/text_size_13"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint=""
                        />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>